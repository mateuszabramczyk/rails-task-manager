<h1><%= @task.title %></h1>
<h5><%= @task.details %></h5>
<% if @task.completed == true %>
<p>You've done it! 🎉</p>
<% else %>
<p>You haven't done it yet 😩</p>
<% end %>

<%= link_to "Delete",
  task_path(@task),
  method: :delete,
  data: { confirm: "Are you sure?" } %>

<%= link_to("Edit", edit_task_path) %>

<%= link_to("Go back to the main page", tasks_path) %>
